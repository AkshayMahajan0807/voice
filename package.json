{
  "name": "@akshaymahajan/voice-recognition",
  "description": "Custom React Native Voice Recognition library for iOS and Android",
  "version": "3.2.5",
  "author": "Akshay Mahajan <your.email@example.com>",
  "private": false,
  "homepage": "https://github.com/AkshayMahajan0807/voice",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "peerDependencies": {
    "expo": ">=48.0.0",
    "react-native": ">=0.71.0"
  },
  "scripts": {
    "lint": "eslint src/*",
    "semantic-release": "semantic-release",
    "start": "yarn --cwd example start",
    "ios": "yarn --cwd example ios",
    "android": "yarn --cwd example android",
    "prepare": "yarn build && yarn build:plugin",
    "build": "tsc",
    "dev-sync": "cp -r ./dist example/node_modules/@akshaymahajan/voice-recognition",
    "type-check": "tsc -noEmit",
    "build:plugin": "tsc --build plugin",
    "lint:plugin": "eslint plugin/src/*"
  },
  "peerDependenciesMeta": {
    "expo": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/AkshayMahajan0807/voice.git"
  },
  "files": [
    "src",
    "dist",
    "android",
    "ios",
    "akshay-voice-recognition.podspec",
    "app.plugin.js",
    "plugin"
  ],
  "keywords": [
    "android",
    "ios",
    "react-native",
    "speech",
    "voice",
    "recognition",
    "akshay"
  ],
  "license": "MIT",
  "dependencies": {
    "invariant": "^2.2.4"
  },
  "codegenConfig": {
    "name": "AkshayVoiceSpec",
    "type": "all",
    "jsSrcsDir": "src",
    "outputDir": {
      "ios": "ios/generated",
      "android": "android/generated"
    },
    "android": {
      "javaPackageName": "com.akshaymahajan.voice"
    }
  },
  "devDependencies": {
    "@types/react": "^19.1.13",
    "@types/react-native": "^0.73.0",
    "typescript": "^5.9.2",
    "@types/jest": "^29.5.12"
  }
}
